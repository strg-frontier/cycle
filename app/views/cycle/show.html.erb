    <!-- Begin Comment Wrapper -->
    <div id="comment-wrapper" class="box">
      
      <!-- Begin Comments -->
      <div id="comments">
              
      <h3 id="comments-title"><%= @article.comments.count %> Responses to "<%= @article.title %>"</h3>
  
      <ol id="singlecomments" class="commentlist">
      <% @article.comments.each do |comment|  %>
        <li class="comment">
          <div class="comment">
            <div class="comment-author vcard user frame">
              <%= image_tag "#{comment.user.image}", :class => 'avatar avatar-70 photo' %>
            </div>
            <div class="message">
              <span class="reply-link"><a class="comment-reply-link" href="#">Reply</a></span>
              <div class="info">
                <h2><%= comment.user.nickname %></h2>
                <span class="meta">September 13, 2012 at 12:32 pm</span>
              </div>
              <div class="comment-body ">
                <p><%= comment.text %></p>
              </div>
              <span class="edit-link"></span>
            </div>
            <div class="clear"></div>
          </div>
          <div class="clear"></div>
        </li>
        <% end %>
      </ol>
    </div>
    <!-- End Comments -->
  
    <!-- Begin Form -->
    <div id="comment-form" class="comment-form">
    
      <div id="respond">
        <h3 id="reply-title">Leave a Reply</h3>
          <% if current_user %>
            <%= form_tag("/cycle/#{@article.id}/comments", method: :post) do %>
              <p class="comment-form-comment">
                <label for="comment">Comment</label>
                <textarea id="comment" name="text" cols="45" rows="8" aria-required="true"></textarea>
              </p>
              <p class="form-submit">
                <input name="submit" type="submit" id="submit" value="Post Comment" />
              </p>
            <% end %>
          <% end %>
        </div><!-- #respond --> 
      </div>
    <!-- End Form --> 
    
    
    </div>  
